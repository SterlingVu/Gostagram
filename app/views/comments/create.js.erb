$("<%= escape_javascript display_comment(@micropost, @comment) %>").appendTo("#micropost_comment_<%= @micropost.id %>");
$("#comment_body_<%= @micropost.id %>").val("");

$("<%= escape_javascript display_comment_with_avatar(@comment, current_user) %>").appendTo("#micropost_show_comment_<%= @micropost.id %>");

$("#comment-menu-<%= @comment.id %>").hide();

$("#delete-cmt-<%= @comment.id %>").on('click', function() {
  $("#comment-menu-<%= @comment.id %>").show();
});

$("#close-comment-<%= @comment.id %>").on('click', function() {
  $("#comment-menu-<%= @comment.id %>").hide();
});
